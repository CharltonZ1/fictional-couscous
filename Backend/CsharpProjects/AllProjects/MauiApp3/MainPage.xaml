<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             Shell.NavBarIsVisible="false">



    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto"
          ColumnDefinitions="*"
          Padding="20,0,20,20"
          BackgroundColor="white">
        <Label Text="100%"
                   x:Name="batteryPercentage"
                   HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Row="0"
               Margin="5"/>

        <Image Grid.Row="1"
               Source="logo_new.png"
               WidthRequest="200"
               Margin="5"/>

        <VerticalStackLayout Grid.Row="3"
                             Margin="5"
                             HeightRequest="300">
            <Label Text="Please enter operator code"
                   HorizontalOptions="Center"
                   Margin="5"/>
            <Border 
                    WidthRequest="314"
                    HeightRequest="40"
                    Margin="5">
                <Label Text="2356"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            <Grid
              RowDefinitions="*, *, *, *, *"
              ColumnDefinitions="*, *, *"
              RowSpacing="7"
              ColumnSpacing="7"
              HorizontalOptions="Center"
              VerticalOptions="Center">
                <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="1"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="2"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="0"
                    Grid.Column="2"
                    Text="3"
                    Style="{StaticResource KeypadButton}"/>

                <Button Grid.Row="1"
                    Grid.Column="0"
                    Text="4"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="1"
                    Grid.Column="1"
                    Text="5"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="1"
                    Grid.Column="2"
                    Text="6"
                    Style="{StaticResource KeypadButton}"/>

                <Button Grid.Row="2"
                    Grid.Column="0"
                    Text="7"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="2"
                    Grid.Column="1"
                    Text="8"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="2"
                    Grid.Column="2"
                    Text="9"
                    Style="{StaticResource KeypadButton}"/>

                <Button Grid.Row="3"
                    Grid.Column="0"
                    Text="Clear"
                    Style="{StaticResource KeypadButton}"
                    BackgroundColor="{StaticResource Primary}"/>
                <Button Grid.Row="3"
                    Grid.Column="1"
                    Text="0"
                    Style="{StaticResource KeypadButton}"/>
                <Button Grid.Row="3"
                    Grid.Column="2"
                    Text="X"
                    Style="{StaticResource KeypadButton}"
                    BackgroundColor="{StaticResource Primary}"/>

                <Button Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Text="Submit"
                        Style="{StaticResource KeypadSubmit}"
                    />
            </Grid>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="4"
                             HorizontalOptions="Center"
                             VerticalOptions="End"
                             Margin="5">
            <Label Text="Version: 0.0.11"
                   Margin="0,0,0,30"
                   HorizontalOptions="Center"/>
            <Label Text="021 879 399"
                   HorizontalOptions="Center"/>
            <Label Text="www.infintyrewards.co.za"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
